# vim: filetype=muttrc
#
unmailboxes *'

# User
set from = "safwanelmadani@arizona.edu"
set realname = "Safwan Elmadani"

set sendmail = "msmtp --account=arizona"

# My mailboxes
set mbox_type = Maildir
set folder = "~/Documents/mail/"

set spoolfile = "+arizona/Inbox"
mailboxes +arizona/Inbox +"arizona/Sent Items" +"arizona/Drafts" +"arizona/Archive" \
            +"arizona/Deleted Items"

# Gmail special folders
set postponed = +arizona/Drafts
set record    = +arizona/Sent\ Items
set trash     = +arizona/Deleted\ Items

# Where to put the stuff
set header_cache = "$XDG_CACHE_HOME/mutt/headers"
set message_cachedir = "$XDG_CACHE_HOME/mutt/bodies"
set certificate_file = "$XDG_CACHE_HOME/mutt/certificates"
unset record

set signature = "~/.config/neomutt/accounts/signatures/arizona"

# macro index,pager G "<shell-escape>mbsync -a<enter><sync-mailbox><enter>" "Get mail"
# neomutt will not wait for a key after the command finishes.
macro index,pager R "<shell-escape>mbsync -V arizona<enter><sync-mailbox><enter><shell-escape>notify-send 'NeoMutt' 'Mail sync complete'<enter>" "Get mail"

# All the notmuch settings are documented here: https://neomutt.org/feature/notmuch

# Points to the notmuch directory
set nm_default_url = "notmuch:///home/safwan/Documents/mail"

virtual-mailboxes "Arizona Today" "notmuch://?query=tag:arizona and date:today"
virtual-mailboxes "Arizona Unread" "notmuch://?query=tag:arizona and tag:unread"

# Makes notmuch return threads rather than messages
set nm_query_type = "threads"
# Binding for notmuch search
# bind index \\ vfolder-from-query
# ~/.neomuttrc
macro index \\ "<vfolder-from-query>tag:arizona and " "Search mailbox with default tag"

