# vim: filetype=muttrc
#
unmailboxes *'

# User
set from = "safwanelmadani@arizona.edu"
set realname = "Safwan Elmadani"

set sendmail = "msmtp --account=arizona"

# My mailboxes
set mbox_type = Maildir
set folder = "~/Documents/mail/"

set spoolfile = "+arizona/Inbox"
mailboxes +arizona/Inbox +"arizona/Sent Items" +"arizona/Drafts" +"arizona/Archive" \
            +"arizona/Deleted Items"

# Gmail special folders
set postponed = +arizona/Drafts
set record    = +arizona/Sent\ Items
set trash     = +arizona/Deleted\ Items

# Where to put the stuff
set header_cache = "$XDG_CACHE_HOME/mutt/headers"
set message_cachedir = "$XDG_CACHE_HOME/mutt/bodies"
set certificate_file = "$XDG_CACHE_HOME/mutt/certificates"
unset record

set signature = "~/.config/neomutt/accounts/signatures/arizona"

# macro index,pager G "<shell-escape>mbsync -a<enter><sync-mailbox><enter>" "Get mail"
# neomutt will not wait for a key after the command finishes.
macro index,pager R "<shell-escape>mbsync -a<enter><sync-mailbox><enter><shell-escape>notify-send 'NeoMutt' 'Mail sync complete'<enter>" "Get mail"
