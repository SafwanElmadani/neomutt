# vim:filetype=msmtp

# global defaults
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# arizona.edu
account         arizona
host            smtp.office365.com
port            587
protocol        smtp
auth            xoauth2
from            safwanelmadani@arizona.edu
user            safwanelmadani@arizona.edu 
passwordeval    "/usr/share/neomutt/oauth2/mutt_oauth2.py /home/safwan/.config/neomutt/safwanelmadani@arizona.edu-token"

# work
account work
host 127.0.0.1
port 1025
protocol smtp
auth plain
tls off
user safwanelmadani@ibm.com
from safwanelmadani@ibm.com
passwordeval "pass work/email"

# ictucson.org
account         ict
host            smtp.gmail.com
port            587
protocol        smtp
auth            login
from            safwanelmadani@ictucson.org
user            safwanelmadani@ictucson.org
passwordeval    "pass ict/email"

# Set a default account
account default: arizona


