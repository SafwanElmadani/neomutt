# vim: filetype=muttrc

source ~/.config/neomutt/settings
source ~/.config/neomutt/colors
source ~/.config/neomutt/mappings
set mailcap_path = ~/.config/neomutt/mailcap


# Accounts
# source ~/.config/neomutt/accounts/personal_gmail
# folder-hook $folder 'source ~/.config/neomutt/accounts/personal_gmail'
#
source ~/.config/neomutt/accounts/school_isync_msmtp
folder-hook '~/Documents/mail/arizona' 'source ~/.config/neomutt/accounts/school_isync_msmtp'

# source ~/.config/neomutt/accounts/work_isync_msmtp
folder-hook '~/Documents/mail/work' 'source ~/.config/neomutt/accounts/work_isync_msmtp'

# Macros to switch accounts
macro index,pager <f2> "<enter-command>source ~/.config/neomutt/accounts/work_isync_msmtp<enter><sync-mailbox><change-folder>!<enter>"
macro index,pager <f3> "<enter-command>source ~/.config/neomutt/accounts/school_isync_msmtp<enter><sync-mailbox><change-folder>!<enter>"
macro index,pager <f4> "<enter-command>source ~/.config/neomutt/accounts/personal_gmail<enter><sync-mailbox><change-folder>!<enter>"

